def rating_dashboard_label(stars):
    if stars >= 4.0:
        return "🟢 Excellent"
    elif stars >= 3.0:
        return "🔵 Good"
    elif stars >= 2.0:
        return "🟠 Average"
    elif stars > 0:
        return "🔴 Poor"
    else:
        return "⚪ Not Rated"


